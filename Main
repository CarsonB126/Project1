import java.util.Scanner;
public class Main {
    public static Scanner scan = new Scanner(System.in);

    public static void main(String[] args) {
        Menu();
    }

    public static void Menu() {
        System.out.println("Options: \n1) ");
        System.out.println("\nPlease choose from the above options:");
        int option = scan.nextInt();

        if (option == 1) {
            System.out.println("You entered: 1");

        } else if (option == 2) {
            System.out.println("You entered: 2");

        } else if (option == 3) {
            System.out.println("You entered: 3");

        } else if (option == 4) {
            System.out.println("You entered: 4");

            Menu();
        } else if (option == 5) {
            System.out.println("You entered: 5");

            Menu();
        } else if (option == 6) {
            System.out.println("You entered: 6");

        } else if (option == 7) {
            System.out.println("You entered: 7");

        } else if (option == 8) {
            System.out.println("You entered: 8");
            System.out.println("Thank you for using our program!");
        } else {
            System.out.println("Sorry, " + option + " is not a valid option");
            Menu();
            }
        }
    }
